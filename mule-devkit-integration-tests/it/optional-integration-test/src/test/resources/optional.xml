<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xmlns:optional="http://www.mulesoft.org/schema/mule/optional"
      xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.1/mule.xsd
        http://www.mulesoft.org/schema/mule/optional http://www.mulesoft.org/schema/mule/optional/1.0/mule-optional.xsd">

    <optional:config name="configB"/>
    <optional:config name="configA" base="5"/>

    <flow name="optionalParameter">
        <optional:sum-multiply-and-divide config-ref="configA" sum1="40" sum2="10"/>
    </flow>

    <flow name="optionalConfig">
        <optional:sum-multiply-and-divide config-ref="configB" sum1="40" sum2="10" multiply="10"/>
    </flow>

</mule>
